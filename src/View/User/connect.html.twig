{% extends 'layout.html.twig' %}
{% block content %}
<div class="d-flex justify-content-center p-5 mt-5">
    <div class="formadd border border-2 rounded bg-light p-3 col-12 col-sm-10 col-md-8 col-lg-4 d-flex flex-column justify-content-center mt-5">
        <h2 class="d-flex justify-content-center">Connexion</h2>
        <form class="pb-5 mt-5" method="post">
            <div class="formco border border-2 rounded bg-light p-3 d-flex flex-column justify-content-center">
                <p><i class="fas fa-user-circle fa-5x d-flex justify-content-center"></i></p>
                {% if error|length > 0 %}
                    <div class="alert alert-danger" role="alert">{{ error }}</div>
                {% endif %}
                <div class="m-2">
                    <label for="mail" class="form-label">Adresse Mail</label>
                    <input type="email" name="mail" class="form-control" id="mail" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text"></div>
                </div>
                <div class="m-2">
                    <label for="password" class="form-label">Mot de passe</label>
                    <input type="password" name="password" class="form-control" id="password">
                </div>
                <div class="text-center"><button type="submit" class="btn mt-4">Se connecter</button></div>
            </div>
        </form>
        <div class="d-flex justify-content-center flex-column formadd border pt-3">
            <p><i class="fab fa-github d-flex fa-3x justify-content-center"></i></p>
            <div class="btn my-4 col-8 mx-auto">
                <a href="{{ url }}" class="nav-link text-secondary fs-4 text-center">Se connecter avec GitHub</a>
            </div>
            <div class="btn my-4 col-8 mx-auto">
                <a href="{{ url_google }}" class="nav-link text-secondary fs-4 text-center">Se connecter avec Google</a>
            </div>
        </div>
        </div>
    </div>
</div>
    <div class="text-center"><a href="/inscription" class="nav-link text-light" >Cr√©er un compte</a></div>
{% endblock %}
