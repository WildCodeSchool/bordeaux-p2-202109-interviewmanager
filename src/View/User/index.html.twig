{% extends 'layout.html.twig' %}

{% block content %}
<div id="background-image-index">
    <form method="post" action="/ajoutEntreprise" class="d-flex justify-content-center p-5 mt-5">
        <div class="border border-2 rounded bg-light p-3 col-12 col-sm-10 col-md-8 col-lg-4 d-flex flex-column justify-content-center">
            <p><i class="fas fa-plus-square fa-3x d-flex justify-content-center"></i></p>
            <h2 class="d-flex justify-content-center">Ajout d'entreprises</h2>
            {% if errors is not empty %}
                <div class="alert alert-danger text-center">
                    {{ errors.error | first }}
                </div>
            {% endif %}
            {% if success|length > 0 %}
                <div class="alert alert-success text-center">
                    {{ success }}
                </div>
            {% endif %}
            {% if recommendations|length > 0 %}
                {{ recommendations.full_name.join(' ', ' et ') }}
                <div class="alert alert-success text-center">
                    {% for recommendation in recommendations %}
                        {{ recommendation.full_name }} {{ loop.index == recommendations|length - 1 ? ' et ' : ' ' }}
                    {% endfor %}
                    {{ recommendations|length > 1 ? 'ont' : 'a' }} des connaissances dans cette entreprise
                </div>

            {% endif %}
            <div class="m-2">
                <label for="company" class="form-label">Entre une entreprise</label>
                <input type="text" name="name" class="form-control" id="company">
            </div>
            <div class="m-2">
                <input type="checkbox" name="is_recommendating" class="form-check-input" id="is_recommendating">
                <label class="form-check-label" for="exampleCheck1">J'ai des relations dans cette entreprise</label>
            </div>
            <div class="text-center"><button type="submit" class="btn btn-primary mt-4">Ajouter</button></div>
        </div>
    </form>
    <div class="container mb-5">
        <ul class="list-group mt-5">
            {% for company in user_companies  %}
                {% if company.is_recommendating == false %}
                    <li class="list-group-item d-flex justify-content-around align-items-center flex-column flex-md-row">
                        <div class="col-8 col-md-3 text-center">
                            <h5>
                                <a href="/entreprise?id={{ company.id }}" class="nav-link">
                                    {{ company.name }}
                                </a>
                            </h5>
                        </div>
                        <form class="d-flex align-items-center col-8 col-md-3 justify-content-evenly justify-content-md-center" method="post">
                            <div class="mb-3">
                                <label for="disabledSelect" class="form-label col-md-4 col-md-offset-4"></label>
                                <input type="hidden" name="company-id" value="{{ company.id }}">
                                <select id="disabledSelect" name="advancement" class="form-select">
                                    {% for advancement in advancements %}
                                        <option value="{{ advancement.id }}" {{ company.advancement_name == advancement.name ? 'selected' : '' }}>
                                            {{ advancement.name }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="mt-2">
                                <button type="submit" class="btn btn-primary">Modifier</button>
                            </div>
                        </form>
                        <div class="progress col-8 col-md-2">
                            <div class="progress-bar progress-bar-striped {{
                                (company.level == advancements | length) ? 'bg-danger' :
                                (company.level == advancements | length - 1 ) ? 'bg-success'
                                }}" role="progressbar" style="width: {{ company.level / (advancements | length - 1)  * 100 }}%"
                                 aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                        <div class="nav-link col-8 col-md-3 text-center">
                            <i class="fas fa-hands-helping fa-2x  {{ (company.count_recommendating == 0) ? 'no-recommendating' : ''}}"></i>
                            <span class="badge bg-primary ms-2">
                                {{ company.count_recommendating }}
                            </span>
                        </div>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
    {# modal #}
    <div class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}
