{% extends 'layout.html.twig' %}

{% block content %}
    <form method="post" action="/ajoutEntreprise" class="d-flex justify-content-center p-5 mt-5">
        <div class="border border-2 rounded bg-light p-3 col-12 col-sm-10 col-md-8 col-lg-4 d-flex flex-column justify-content-center">
            <p><i class="fas fa-plus-square fa-3x d-flex justify-content-center"></i></p>
            <h2 class="d-flex justify-content-center">Ajout d'entreprises</h2>
            {% if errors is not empty %}
                <div class="alert alert-danger text-center">
                    {{ errors.error | first }}
                </div>
            {% endif %}
            {% if success|length > 0 %}
                <div class="alert alert-success text-center">
                    {{ success }}
                </div>
            {% endif %}
            <div class="m-2">
                <label for="company" class="form-label">Entre une entreprise</label>
                <input type="text" name="name" class="form-control" id="company">
            </div>
            <div class="m-2">
                <input type="checkbox" name="is_recommendating" class="form-check-input" id="is_recommendating">
                <label class="form-check-label" for="exampleCheck1">J'ai des relations dans cette entreprise</label>
            </div>
            <div class="text-center"><button type="submit" class="btn btn-primary mt-4">Ajouter</button></div>
        </div>
    </form>
<div class="container mb-5">
    <ul class="list-group mt-5">
        {% for company in user_companies  %}
            <li class="list-group-item d-flex justify-content-around align-items-center">
                <div>
                    <h5><a href="/entreprise?id={{ company.id }}" class="nav-link">{{ company.name }}</a></h5>
                </div>
                <form class="d-flex align-items-center" method="post">


                        <div class="mb-3">

                            <label for="disabledSelect" class="form-label"></label>
                            <input type="hidden" name="company-id" value="{{ company.id }}">
                            <select id="disabledSelect" name="advancement" class="form-select">
                                {% for advancement in advancements %}

                                    <option value="{{ advancement.id }}">
                                        {{ advancement.name }}
                               </option>
                                {% endfor %}

                            </select>
                        </div>
                      <div class="mt-2">
                          <button type="submit" class="btn btn-primary">Modifier</button>
                      </div>
                </form>
                <div class="progress col-2">
                    <div class="progress-bar progress-bar-striped
                    {{
                    (company.level == advancements | length) ? 'bg-danger' :
                    (company.level == advancements | length - 1 ) ? 'bg-success'}}"
                         role="progressbar" style="width: {{ company.level / (advancements | length - 1)  * 100 }}%"
                         aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    </div>
                </div>

            </li>
        {% endfor %}
    </ul>
    </div>

{% endblock %}